{
  "version": "0.2.1",
  "tasks": [
    {
      "taskLabel": "environment",
      "appliesTo": "*",
      "args": ["set"],
      "command": "${env.ComSpec}",
      "inheritEnvironments": ["${cpp.activeConfiguration}"],
      "type": "launch"
    },
    {
      "taskLabel": "deploy to RAM",
      "appliesTo": "/",
      "args": ["deploy"],
      "command": "cs-make.exe",
      "inheritEnvironments": ["${cpp.activeConfiguration}"],
      "type": "launch"
    },
    {
      "taskLabel": "build all",
      "appliesTo": "makefile",
      "args": ["all -j8"],
      "command": "cs-make.exe",
      "inheritEnvironments": ["${cpp.activeConfiguration}"],
      "contextType": "build"
    },
    {
      "taskLabel": "build all",
      "appliesTo": "/",
      "args": ["all -j8"],
      "command": "cs-make.exe",
      "inheritEnvironments": ["${cpp.activeConfiguration}"],
      "contextType": "build"
    },
    {
      "taskLabel": "clean all",
      "appliesTo": "/",
      "args": ["clean"],
      "command": "cs-make.exe",
      "inheritEnvironments": ["${cpp.activeConfiguration}"],
      "contextType": "clean"
    },
    {
      "taskLabel": "rebuild all",
      "appliesTo": "/",
      "args": ["clean all"],
      "command": "cs-make.exe",
      "inheritEnvironments": ["${cpp.activeConfiguration}"],
      "contextType": "rebuild"
    },
    {
      "taskLabel": "build C file",
      "appliesTo": "*.c",
      "args": ["build/${env.BLD_TYPE}/${relativeFile}.o"],
      "command": "cs-make.exe",
      "inheritEnvironments": ["${cpp.activeConfiguration}"],
      "contextType": "build"
    },
    {
      "taskLabel": "build ASM file",
      "appliesTo": "*.S",
      "args": ["build/${env.BLD_TYPE}/${relativeFile}.o"],
      "command": "cs-make.exe",
      "inheritEnvironments": ["${cpp.activeConfiguration}"],
      "contextType": "build"
    }
  ]
}